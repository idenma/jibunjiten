<div class="form-base">

<div class="form-heading">
<p><%=form_tag("/microposts/#{@Dictionary.id}/#{@post.id}/#{@micropost.id}",method: :patch) do %></p>

<h1><%= @post.heading %></h1>

<p>見だし２</p>
<p><input class="input" type="text" name="subheading" value="<%= @micropost.subheading %>" ></p>

</div>

<div class="form-contents">
<input type="hidden" name="dictionary_id" value="<%="#{@Dictionary.id}" %>" >
<input type="hidden" name="post_id" value="<%="#{@post.id}" %>" >

<div class="form-textarea">
<p>本文１</p>
<textarea name="content_1"><%= @micropost.content_1.gsub(/(\r\n|\r|\n)/, "\n")  %></textarea>
</div>

<div class="form-textarea">
<p>本文２</p>
<textarea name="content_2"><%= @micropost.content_2.gsub(/(\r\n|\r|\n)/, "\n")  %></textarea>
</div>

</div>

