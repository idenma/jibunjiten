<div class="col-md-1">
  <div class="body-bar">
  </div>
</div>

<div class="col-md-9">
<div class="main-contents">

  <div class="content-ziplock">


    <div class="col-content">
      <div class="show_heading">
        <div class="heading-h1">
          <h1><span class="medium"><i class="fas fa-check-square"></i></span><%=@post.heading %></h1>
        </div>
        <% if @post.subheading.blank? %>
        <h2><%= " 　"%></h2>
        <% else%>
        <h2><%=@post.subheading %></h2>
        <% end%>
      </div>
    </div>

    <div class="content-pack">
      <%= render "/posts/content-pack" %>
	  </div><!--content-pack-->

    <div class="icon-hanger">
      <div class="icon_button">
        <p><i class="fas fa-ellipsis-h"></i></p>


        <div class="icon-hanger-open">
        <div class="row-content"><!--Adjustment　icon-->


          <div class="edit-modal-open"><!--update-->
            <div class="edit-modal">
              <div class="edit-modal-bg modal-close">
                <h1><i class="fas fa-times-circle"></i></h1>

              </div>
              <div class="edit-modal-content">
                <%= render "/posts/edit" %>
              </div>
            </div>

          <div class="icon_button">
            <div class="tooltip1">
              <p><i class="far fa-edit"> </i></p>
             <div class="description1">更新 </div>
           </div>
            </div>

          </div><!--update-->


          <div class="icon_button"><!--delete-->
            <%= link_to("/posts/#{@Dictionary}/#{@post.id}/",method: :delete,data: { confirm: "削除しますか？" })do %>
            <div class="tooltip1">
              <p><i class="far fa-trash-alt"> </i></p>
             <div class="description1">削除</div>
           </div>
            <% end %>
          </div><!--delete-->



          <div class="edit-modal-open"><!--add to　micropost-->
            <div class="edit-modal">
              <div class="edit-modal-bg modal-close">
                <h1><i class="fas fa-times-circle"></i></h1>

              </div>
              <div class="edit-modal-content">
                <%= render "/microposts/new" %>
              </div>
            </div>

          <div class="icon_button">
            <div class="tooltip1">
              <p><i class="fas fa-arrow-down"> </i></p>
             <div class="description1">テキスト追加</div>
           </div>
            </div>

          </div><!--add to　micropost-->





        </div><!--Adjustment　icon-->
        </div><!-- icon-hanger-open-->




      </div><!-- icon-button-->
    </div><!-- icon-hanger-->


    </div><!--content-ziplock-->


    <% if @post.microposts.count > 0 %>
      <%= render "/microposts/micropost_display"%><!--micropost-->
    <% end %>
  </div><!--main-contents-->


</div><!--col-md-9-->
