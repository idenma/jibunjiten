<div class="col-md-1">
  <div class="body-bar">
  </div>
</div>

<div class="col-md-9">
<div class="main-contents">

  <div class="content-ziplock">


    <div class="col-content">
      <div class="show_heading">
        <div class="heading-h1">
          <h1><span class="medium"><i class="fas fa-check-square"></i></span><%=@post.heading %></h1>
        </div>
        <% if @post.subheading.blank?%>
        <h2><%= " 　"%></h2>
        <% else%>
        <h2><%=@post.subheading %></h2>
        <% end%>
      </div>
    </div>
    <div class="row-content">
      <%if @post.content_1.blank? %>
      <div class="air_content">
      </div>
      <% else %>
      <div class="child_content_1">
        <p><%=simple_format((@post.content_1).gsub(/ /,"&ensp;")) %></p>
      </div>
      <% end %>
      <%if @post.content_2.blank? %>
      <div class="air_content">
      </div>
      <% else %>
      <div class="child_content_2">
        <p><%=simple_format((@post.content_2).gsub(/ /,"&ensp;")) %></p>
      </div>
      <% end %>
    </div>
	<div class="row-content">
	  <div class="left-text">
	    <p><%= @post.updated_at %></p>
	  </div>
	</div>
    <div class="row-content">
      <div class="edit-modal-open">
        <div class="edit-modal">
          <div class="edit-modal-bg modal-close">
            <h1><i class="fas fa-times-circle"></i></h1>

          </div>
          <div class="edit-modal-content">
            <%= render "/posts/edit" %>
          </div>
        </div>
      <div class="icon_button">
        <div class="tooltip1">
          <p><i class="far fa-edit"> </i></p>
         <div class="description1">更新 </div>
       </div>


        </div>

      </div>
      <div class="icon_button">
        <%= link_to("/posts/#{@Dictionary}/#{@post.id}/",method: :delete,data: { confirm: "削除しますか？" })do %>
        <div class="tooltip1">
          <p><i class="far fa-trash-alt"> </i></p>
         <div class="description1">削除</div>
       </div>

        <% end %>
      </div>
    </div>

  </div><!--content-ziplock-->



</div><!--main-contents-->
