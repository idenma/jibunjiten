<div class="form-base">
  <div class="form-heading">
    <%=form_tag(posts_create_path) do %>
    <h1><%= Dictionary.find(@Dictionary).name %></h1>
    <p>見出し１</p>
    <input class="input" type="text" name="heading">
    <p>見出し２</p>
    <input class="input" type="text" name="subheading">
  </div>
  <div class="form-contents">
    <input type="hidden" name="dictionary_id" value="<%=" #{@Dictionary}" %>" >
    <div class="form-textarea">
      <p>本文１</p>
      <textarea name="content_1"></textarea>
    </div>
    <div class="form-textarea">
      <p>本文２</p>
      <textarea name="content_2"></textarea>
    </div>
  </div>
  <div class="form-submit">
    <input type="submit" value="ok">
  </div>
  <% end %>
</div>
